---
# YAML linting rules for zti-config

extends: default

rules:
  # Line length
  line-length:
    max: 120
    level: warning

  # Indentation
  indentation:
    spaces: 2
    indent-sequences: true

  # Comments
  comments:
    min-spaces-from-content: 1

  # Truthy values
  truthy:
    allowed-values: ['true', 'false', 'yes', 'no']
    check-keys: false

  # Document start
  document-start:
    present: true

  # Trailing spaces
  trailing-spaces: enable

  # Empty lines
  empty-lines:
    max: 2

  # Brackets
  brackets:
    min-spaces-inside: 0
    max-spaces-inside: 1

ignore: |
  .venv/
  venv/
  .git/
  collections/
  galaxy_collections/
