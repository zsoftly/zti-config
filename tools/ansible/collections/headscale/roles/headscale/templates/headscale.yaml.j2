---
# Headscale Configuration - Generated by Ansible
# Do not edit directly - changes will be overwritten

# Server URL - must match the domain clients connect to
server_url: https://{{ headscale_domain }}

# Listen addresses
listen_addr: 0.0.0.0:8080
{% if headscale_metrics_enabled | default(true) %}
metrics_listen_addr: 0.0.0.0:9090
{% endif %}

# gRPC settings
grpc_listen_addr: 0.0.0.0:50443
grpc_allow_insecure: false

# Key paths (inside container)
private_key_path: /var/lib/headscale/private.key
noise:
  private_key_path: /var/lib/headscale/noise_private.key

# IP Prefixes for clients
prefixes:
  v4: {{ headscale_ipv4_prefix }}
  v6: {{ headscale_ipv6_prefix }}

# DERP configuration
derp:
  server:
    enabled: {{ headscale_derp_enabled | default(true) | lower }}
    region_id: 999
    region_code: "headscale"
    region_name: "Headscale Embedded DERP"
    stun_listen_addr: "0.0.0.0:3478"
    private_key_path: /var/lib/headscale/derp_server_private.key
  urls:
    - https://controlplane.tailscale.com/derpmap/default
  auto_update_enabled: true
  update_frequency: 24h

# Disable key expiry (nodes won't need re-auth)
disable_check_updates: false
ephemeral_node_inactivity_timeout: 30m

# Database configuration
database:
  type: sqlite
  sqlite:
    path: /var/lib/headscale/db.sqlite

# DNS configuration
dns:
  magic_dns: true
  base_domain: {{ headscale_base_domain }}
  nameservers:
    global:
{% for server in headscale_dns_servers %}
      - {{ server }}
{% endfor %}
{% if headscale_split_dns is defined and headscale_split_dns | length > 0 %}
    split:
{% for domain, nameservers in headscale_split_dns.items() %}
      {{ domain }}:
{% for ns in nameservers %}
        - {{ ns }}
{% endfor %}
{% endfor %}
{% else %}
    split: {}
{% endif %}
  search_domains: []
  extra_records: []

# Logging
log:
  format: text
  level: info

# Policy (ACL) - file-based for GitOps compatibility
policy:
  mode: file
  path: /etc/headscale/acl.json

# OIDC / SSO Configuration
{% if headscale_oidc_enabled | default(false) %}
oidc:
  only_start_if_oidc_is_available: true
  issuer: "{{ headscale_oidc_issuer }}"
  client_id: "{{ headscale_oidc_client_id }}"
  client_secret: "{{ headscale_oidc_client_secret }}"
{% if headscale_oidc_allowed_domains is defined and headscale_oidc_allowed_domains | length > 0 %}
  allowed_domains:
{% for domain in headscale_oidc_allowed_domains %}
    - {{ domain }}
{% endfor %}
{% endif %}
{% if headscale_oidc_allowed_groups is defined and headscale_oidc_allowed_groups | length > 0 %}
  allowed_groups:
{% for group in headscale_oidc_allowed_groups %}
    - {{ group }}
{% endfor %}
{% endif %}
{% else %}
# OIDC disabled - see vars/headscale.yml for configuration
oidc:
  only_start_if_oidc_is_available: false
  issuer: ""
  client_id: ""
  client_secret: ""
{% endif %}
